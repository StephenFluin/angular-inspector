{
    "manifest_version": 2,
    "name": "Angular Inspector",
    "version": "0.8.2",
    "description": "Detect Angular apps and javascript libraries",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png"
    },
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "js": ["dist/main.js"],
            "matches": ["http://*/*", "https://*/*"]
        }
    ],
    "page_action": {
        "default_icon": {
            "32": "icon.png"
        },
        "default_popup": "popup.html",
        "default_title": "Angular Inspector"
    },
    "options_page": "options.html",
    "permissions": [
        "webRequest",
        "storage",
        "http://*/*",
        "https://*/*",
        "https://inspector-b2058.firebaseio.com/sites/example.com/angular"
    ],
    "web_accessible_resources": ["dist/detector.js"]
}
