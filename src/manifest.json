{
    "manifest_version": 2,
    "name": "Angular Inspector",
    "version": "0.5.5",
    "description": "Detect angular applications and javascript libraries run on browsing website.",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png"
    },
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "js": [
                "main.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "page_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Click for more details."
    },
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "webRequest",
        "storage",
        "http://*/*",
        "https://*/*",
        "https://angular-tracker.firebaseio.com/sites/example.com/angular"
    ],
    "web_accessible_resources": [
        "detector.js"
    ]
}